XAI_API_KEY=
# Optional: override the xAI API base url
# XAI_BASE_URL=https://api.x.ai/v1

# App URL (recommended for OAuth redirects in dev/prod)
# APP_URL=http://localhost:3000

# Session secret (required for encrypting GitHub tokens in cookies)
# PAT_SESSION_SECRET=replace-with-a-long-random-string

# GitHub OAuth (for Connect GitHub)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# GitHub tool limits
# GITHUB_MAX_CHARS=60000
# GITHUB_MAX_LIST_ITEMS=200
# GITHUB_MAX_REPOS=80

# Tool calling
# Maximum sequential tool calls allowed per chat request.
# PAT_MAX_TOOL_CALLS=4

# Todoist
# Optional: override the Todoist API base url
# TODOIST_BASE_URL=https://api.todoist.com/api/v1

# Voice-to-voice (WebSocket proxy) â€” xAI realtime WebSocket endpoint (must be wss://...).
# Pat runs a local proxy on `ws://127.0.0.1:8787/voice` to keep your `XAI_API_KEY` off the browser.
# XAI_REALTIME_WS_URL=wss://api.x.ai/v1/realtime?model=...
# Optional: add extra headers as JSON, e.g. {"xai-beta":"realtime=v1"}
# XAI_REALTIME_HEADERS_JSON=
# Optional: override proxy bind address/port
# PAT_VOICE_PROXY_HOST=127.0.0.1
# PAT_VOICE_PROXY_PORT=8787

FIRECRAWL_API_KEY=
# Optional: override the Firecrawl API base url
# FIRECRAWL_BASE_URL=https://api.firecrawl.dev
